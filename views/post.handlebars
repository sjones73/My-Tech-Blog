<article>
    <h2>{{post.title}}</h2>
    <p>By {{post.user.username}} on {{post.createdAt}}</p>
    <p>{{post.content}}</p>
</article>

<section>
    <h3>Comments</h3>
    {{#each post.comments}}
        <p>{{comment_text}} - {{user.username}}, {{createdAt}}</p>
    {{else}}
        <p>No comments yet. Be the first to comment!</p>
    {{/each}}
</section>

{{#if logged_in}}
    <form id="comment-form">
        <textarea name="comment_text" placeholder="Add your comment"></textarea>
        <button type="submit">Submit</button>
    </form>
{{/if}}
<script src="/js/comment.js"></script>
